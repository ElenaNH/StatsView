<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ru.netology.statsview.ui.StatsView
        android:id="@+id/statsView"
        android:layout_width="@dimen/stats_view_size_half"
        android:layout_height="@dimen/stats_view_size_half"
        android:layout_gravity="center|start"
        app:color1="@color/blue_1"
        app:color2="@color/yellow_1"
        app:color3="@color/green_1"
        app:color4="@color/red_1"
        app:lineWidth="16dp"
        app:textSize="20sp" />

    <!-- Второй элемент без идентификатора -->
    <ru.netology.statsview.ui.StatsView
        android:layout_width="@dimen/stats_view_size_half"
        android:layout_height="@dimen/stats_view_size_half"
        android:layout_gravity="center|end"
        app:color1="@color/blue_1"
        app:color2="@color/yellow_1"
        app:color3="@color/green_1"
        app:color4="@color/red_1"
        app:lineWidth="16dp"
        app:textSize="20sp" />

</merge>
